<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y36"
        android:background="#2CC8B3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y22"
            android:layout_marginLeft="@dimen/y72"
            android:gravity="center"
            android:paddingLeft="@dimen/y32"
            android:layout_centerInParent="true"
            android:background="@drawable/fenlei_sousuo_bg">
            <ImageView
                android:layout_width="@dimen/y13"
                android:background="@drawable/ico_sousuo"
                android:layout_height="@dimen/y13" />
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="搜索你感兴趣的宝贝"
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_size_three"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/head_right"
            android:layout_width="@dimen/y18"
            android:layout_height="@dimen/y18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/iv_message" />
    </RelativeLayout>

   <ListView
       android:id="@+id/lv_classify"
       android:layout_width="match_parent"
       android:cacheColorHint="#00000000"
       android:layout_height="match_parent">
   </ListView>
</LinearLayout>
