<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recyclerview_item_friendlist_iv_headimg"
        android:layout_width="@dimen/y40"
        android:layout_height="@dimen/y40"
        android:layout_margin="@dimen/y5"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/logo"/>

    <TextView
        android:id="@+id/recyclerview_item_friendlist_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recyclerview_item_friendlist_iv_headimg"
        android:layout_toEndOf="@+id/recyclerview_item_friendlist_iv_headimg"
        android:layout_toRightOf="@+id/recyclerview_item_friendlist_iv_headimg"
        android:text="名字"
        android:textColor="@color/white"
        android:textSize="@dimen/y12"/>

</RelativeLayout>