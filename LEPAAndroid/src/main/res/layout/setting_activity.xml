<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F7F5F6"
    android:layout_height="match_parent">

    <include layout="@layout/head_title" />

    <LinearLayout
        android:id="@+id/ll_friends_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/y29"
                android:layout_height="@dimen/y29"
                android:background="@mipmap/p6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y12"
                android:text="好友设置"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical|right">


            <RelativeLayout
                android:layout_width="@dimen/y35"
                android:layout_height="@dimen/y22"
                android:layout_marginRight="40dp"
                android:background="@drawable/message_num"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_two" />
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/y7"
                android:layout_height="@dimen/y16"
                android:background="@mipmap/youjiantou" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
