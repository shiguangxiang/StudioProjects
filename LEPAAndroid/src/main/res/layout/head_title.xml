<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34"
        android:background="@drawable/head_bg">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="11dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/y11"
                android:layout_height="@dimen/y22"
                android:background="@drawable/p_rigth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="我"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_zero1" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_head_title"
            android:layout_width="wrap_content"
            android:text="乐啪"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_zero1"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/head_right"
            android:layout_width="@dimen/y22"
            android:layout_height="@dimen/y22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/iv_message" />


    </RelativeLayout>
</LinearLayout>
