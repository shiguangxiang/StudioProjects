<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F6"
    android:orientation="vertical">

    <include layout="@layout/head_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/y29"
                android:layout_height="@dimen/y29"
                android:background="@mipmap/p5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y12"
                android:text="允许陌生人添加好友"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y5"
            android:gravity="center_vertical|right">

                <com.dalianbobo.lepaandroid.weiget.SlideSwitchView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/y6"
                    android:enabled="true" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/y29"
                android:layout_height="@dimen/y29"
                android:background="@mipmap/p5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y12"
                android:text="允许陌生人发消息"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y5"
            android:gravity="center_vertical|right">


                <com.dalianbobo.lepaandroid.weiget.SlideSwitchView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/y6"
                    android:enabled="true" />"

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/y29"
                android:layout_height="@dimen/y29"
                android:background="@mipmap/p5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y12"
                android:text="声音"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y5"
            android:gravity="center_vertical|right">

                <com.dalianbobo.lepaandroid.weiget.SlideSwitchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/y6"
                    android:enabled="true" />"
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y11"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/y29"
                android:layout_height="@dimen/y29"
                android:background="@mipmap/p5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y12"
                android:text="震动"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y5"
            android:gravity="center_vertical|right">


                <com.dalianbobo.lepaandroid.weiget.SlideSwitchView
                    android:id="@+id/mSlideSwitchView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/y6"
                    android:enabled="true" />"

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:background="@color/white"
        android:padding="@dimen/y9">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/y29"
            android:layout_height="@dimen/y29"
            android:background="@mipmap/p5" />

        <TextView
            android:id="@+id/text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="震动"
            android:layout_marginLeft="@dimen/y12"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_two" />

        <com.dalianbobo.lepaandroid.weiget.SlideSwitchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y6"
            android:layout_alignParentRight="true"
            android:enabled="true" />"
    </RelativeLayout>
</LinearLayout>
