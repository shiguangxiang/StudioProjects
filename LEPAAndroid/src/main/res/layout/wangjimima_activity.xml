<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/head_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="22dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_wjmm_phone"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btn_wjmm_getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wjmm_code"
                android:text="获取验证码"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="22dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_wjmm_code"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请输入验证码"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="22dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_wjmm_pwd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请重置密码，不少于6位"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btn_wjmm_showPwd"
                android:layout_width="wrap_content"
                android:background="@drawable/show_pwd"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
