<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login"
    style="@style/Theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y30"
            android:layout_marginRight="@dimen/y30"
            android:orientation="vertical">
            <!--输入用户名块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:background="@drawable/login_edt_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/y22"
                    android:layout_height="@dimen/y22"
                    android:layout_margin="@dimen/y8"
                    android:background="@drawable/ico_username" />

                <EditText
                    android:id="@+id/edt_userAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="E-mail address"
                    android:maxLength="11"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!--输入密码块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:layout_marginTop="@dimen/y13"
                android:background="@drawable/login_edt_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/y22"
                    android:layout_height="@dimen/y22"
                    android:layout_margin="@dimen/y8"
                    android:background="@drawable/ico_userpassword" />

                <EditText
                    android:id="@+id/edt_userPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!--登录按钮模块-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12">

                <ImageView
                    android:id="@+id/btn_login"
                    android:layout_width="@dimen/y114"
                    android:layout_height="@dimen/y28"
                    android:layout_centerInParent="true"
                    android:background="@drawable/login_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="登录"
                    android:textSize="@dimen/text_size_three" />
            </RelativeLayout>

            <!--忘记密码注册模块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y11"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="9dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_loginGG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="随便逛逛"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_four" />
            <ImageView
                android:layout_width="12dp"
                android:layout_marginLeft="3dp"
                android:layout_height="15dp"
                android:background="@drawable/register_youjian"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
